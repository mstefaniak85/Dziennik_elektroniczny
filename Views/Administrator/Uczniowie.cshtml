@model IEnumerable<Dziennik_elektroniczny.Models.Uczen>

<h1>Lista uczniów</h1>

<p>
    <a asp-action="DodajUcznia" class="btn btn-primary">Dodaj ucznia</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Klasa</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uczen in Model)
        {
            <tr>
                <td>@uczen.Imie</td>
                <td>@uczen.Nazwisko</td>
                <td>@uczen.Klasa?.Nazwa</td>
                <td>
                    <a asp-action="EdytujUcznia" asp-route-id="@uczen.Id" class="btn btn-warning btn-sm">Edytuj</a>
                    <a asp-action="UsunUcznia" asp-route-id="@uczen.Id" class="btn btn-danger btn-sm">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
