@model Dziennik_elektroniczny.Models.Przedmiot

<h1>Edytuj przedmiot</h1>

<form asp-action="EdytujPrzedmiot" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nazwa" class="control-label">Nazwa przedmiotu</label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NauczycielId" class="control-label">Nauczyciel</label>
        <select asp-for="NauczycielId" class="form-control" asp-items="ViewBag.Nauczyciele"></select>
        <span asp-validation-for="NauczycielId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Przedmioty" class="btn btn-secondary">Anuluj</a>
</form>
